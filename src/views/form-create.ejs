<%-include("partials/header") %>

<main>
    <div class="container">
        <h1 class="color-5 mt-3">Crea una publicación</h1>
        <hr>
        <div class="container d-flex justify-content-center">
            <form enctype="application/x-www-form-urlencoded" action="/posts/create" method="post" class="color-1 form">
                <div class="mb-3">
                    <label for="autor" class="form-label">Autor</label>
                    <input type="text" class="form-control" id="autor" name="autor" placeholder="Ingresa el autor..." required>
                </div>
                <div class="mb-3">
                    <label for="titulo" class="form-label">Título</label>
                    <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Ingresa el título..." required>
                </div>
                <div class="mb-3">
                    <label for="detalle" class="form-label">Detalle</label>
                    <input type="text" class="form-control" id="detalle" name="detalle" placeholder="Ingresa el detalle..." required>
                </div>
                <div class="mb-3">
                    <label for="url_imagen" class="form-label">Url de la imagen</label>
                    <input type="url" class="form-control" id="url_imagen" name="url_imagen" placeholder="Ingresa la url de la imagen..." required>
                </div>
                <button type="submit" id="btn-create" class="btn btn-black">Crear nueva publicación</button>
            </form>
        </div>
    </div>
</main>
<hr>
</div>

<%-include("partials/footer") %>