<%-include("partials/header") %>

<main class="color-5 mb-4 mt-4">
    <div class="container">
        <h1 class="mt-3"><%= post.titulo %></h1>
        <hr class="color-1">
        <div class="card-img-top-detail rounded d-flex border border-2 m-2 mb-3">
            <img class="card-img-top" src="<%= post.url_imagen %>" alt="Imagen blog">
            <div class="card-body pt-1 pb-1 d-flex flex-column justify-content-between px-3 m-2">
                <h2><%= post.titulo %></h2>
                <p class="card-text"><%= post.detalle %></p>
                <p><%= post.fecha_publicacion %></p>
                <div class="d-flex gap-3">
                    <a href="/posts/update/<%= post.id %>" class="btn btn-update btn-black">Modificar publicación</a>
                    <a id="btn-delete" class="btn btn-black btn-delete">Eliminar publicación</a>
                </div>
            </div>
        </div>
        <a type="button" class="btn btn-black" href="/posts">Ver todas las publicaciones</a>
    </div>
</main>
<hr>
</div>

<%-include("partials/footer") %>